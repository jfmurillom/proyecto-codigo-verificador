<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- 
        Configuración de Logback (implementación de SLF4J)
        
        Los logs son cruciales para debugging y monitoreo.
        Niveles de log (de menos a más detalle):
        - ERROR: Errores críticos
        - WARN: Advertencias
        - INFO: Información general
        - DEBUG: Información detallada para debugging
        - TRACE: Información muy detallada
    -->
    
    <!-- ===== APPENDERS (dónde se escriben los logs) ===== -->
    
    <!-- Appender para la consola (System.out) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Formato del log -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Appender para archivo (logs/application.log) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Archivo actual de logs -->
        <file>logs/verificador-codigos.log</file>
        
        <!-- Política de rotación (crear nuevos archivos) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Patrón de nombre de archivos archivados -->
            <fileNamePattern>logs/verificador-codigos-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Mantener logs de los últimos 30 días -->
            <maxHistory>30</maxHistory>
            <!-- Tamaño máximo total de logs: 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Appender para archivo de errores únicamente -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/errors.log</file>
        
        <!-- Filtro: solo errores y superiores -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/errors-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
                %ex{full}
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- ===== LOGGERS (configuración por paquete) ===== -->
    
    <!-- Logger para nuestro código -->
    <logger name="com.evidencia" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Logger para Spring Framework -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Logger para Hibernate -->
    <logger name="org.hibernate" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Logger para SQL de Hibernate (ver las queries) -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Logger para parámetros de SQL (ver los valores en las queries) -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Logger para HikariCP (connection pool) -->
    <logger name="com.zaxxer.hikari" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Logger ROOT (para todo lo demás) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
    
</configuration>
